#!/bin/bash

notification(){
  adb shell dumpsys notification --noredact\
  | perl -ne '(/com\.spotify/../NotificationRecord/) && print'\
  | perl -pe 's/.*(com\.spotify.*)/$1/'\
  | perl -pe 's/(.*NotificationRecord).*/$1/'\
  | grep "title\|text"\
  | perl -nle 'print $1 if /\((.*)\)/'\
  | sed -z 's/\n/\n\n/'
}

notold=""

while true
do
  notnew="$(notification)"
  if [[ "$notnew" != "$notold" ]]
  then
    # notify-send "$notnew"
    dunstify\
      -a "spotifyNotification"\
      -I "/usr/share/icons/Papirus/24x24/apps/Spotify.svg"
      -u low\
      -r "263723"\
      "$notnew"
  fi
  sleep 0.5
  echo -e "$notnew"
  notold="$notnew"
done

