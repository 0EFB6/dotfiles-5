#!/bin/bash
# changeVolume

# Arbitrary but unique message id
msgId="991049"

# Change the volume using alsa(might differ if you use pulseaudio)
pactl set-sink-volume "$(pactl info | grep "Default Sink" | cut -d" " -f3 | tr -d "\n")" "$1" > /dev/null

# Query amixer for the current volume and whether or not the speaker is muted
volume="$(amixer get Master | tail -1 | awk '{print $5}' | sed 's/[^0-9]*//g')"
mute="$(amixer get Master | tail -1 | awk '{print $6}' | sed 's/[^a-z]*//g')"
if [[ $volume == 0 || "$mute" == "off" ]]; then
    # Show the sound muted notification
    dunstify -a "changeVolume" -u low -I "/usr/share/icons/Papirus/24x24/actions/audio-volume-muted.svg" -r "$msgId" "         Volume muted"
else
    # Show the volume notification
    dunstify -a "changeVolume" -u low -I "/usr/share/icons/Papirus/16x16/actions/audio-volume-high.svg" -r "$msgId" \
    -h int:value:"$volume" "             ${volume}%"
fi

# Play the volume changed sound
# canberra-gtk-play -i audio-volume-change -d "changeVolume"
