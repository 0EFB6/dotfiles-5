#!/bin/bash

# notification-next-back(){
#   adb shell dumpsys notification --noredact\
#   | perl -ne '(/com\.spotify/../NotificationRecord/) && print'\
#   | perl -pe 's/.*(com\.spotify.*)/$1/'\
#   | perl -pe 's/(.*NotificationRecord).*/$1/'\
#   | grep "title\|text"\
#   | perl -nle 'print $1 if /\((.*)\)/'\
#   | sed -z 's/\n/\n\n/;s/^/\n/'
# }

notification-play-pause(){
  adb shell dumpsys notification --noredact\
  | perl -ne '(/com\.spotify/../NotificationRecord/) && print'\
  | perl -pe 's/.*(com\.spotify.*)/$1/'\
  | perl -pe 's/(.*NotificationRecord).*/$1/'\
  | grep "flags=0x6a"
}

case "$1" in
	"next")
	  [[ $(ps -p "$(pgrep anbox)" | grep session) == "" ]] && playerctl -a next
    adb shell input keyevent 87
    # dunstify\
    #   -a "spotifyNotification"\
    #   -I "/usr/share/icons/Papirus/24x24/apps/Spotify.svg"\
    #   -u low\
    #   -r "263723"\
    #   "Playing $(notification-next-back)" ;;
	"previous")
	  [[ "$(ps -p "$(pgrep anbox)" | grep session)" == "" ]] && playerctl -a previous
    adb shell input keyevent 88;
    # dunstify\
    #   -a "spotifyNotification"\
    #   -I "/usr/share/icons/Papirus/24x24/apps/Spotify.svg"\
    #   -u low\
    #   -r "263723"\
    #   "Playing $(notification-next-back)" ;;
	"play-pause")
  	[[ "$(ps -p $(pgrep anbox) | grep session)" == "" ]] && playerctl -a play-pause
    adb shell input keyevent 85
    if [[ "$(notification-play-pause)" != "" ]]
    then
      dunstify\
        -a "spotifyNotification"\
        -I "/usr/share/icons/Papirus/24x24/apps/Spotify.svg"\
        -u low\
        -r "263723"\
        "Spotify paused..."
    else
      dunstify\
      -a "spotifyNotification"\
      -I "/usr/share/icons/Papirus/24x24/apps/Spotify.svg"\
      -u low\
      -r "263723"\
      "Spotify playing..."
    fi;;
esac
